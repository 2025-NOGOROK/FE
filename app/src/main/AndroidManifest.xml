<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nogorok">

    <!-- Android 13 이상 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NOGOROK"
        tools:targetApi="31">

        <!-- 1. 앱 실행 시 제일 먼저 뜨는 SplashActivity(런처) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NOGOROK.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 온보딩 액티비티 (필요하면 추가) -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 회원가입/로그인 선택 화면 -->
        <activity
            android:name=".SignupLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 로그인 화면 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 비밀번호 찾기 관련 액티비티 -->
        <activity android:name=".FindPasswordEmailActivity" android:exported="false" />
        <activity android:name=".FindPasswordResetActivity" android:exported="false" />

        <!-- 회원가입 플로우 전체 액티비티 등록 -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />
        <activity android:name=".ServiceTermsActivity"/>
        <activity android:name=".PrivacyTermsActivity"/>
        <activity android:name=".HealthTermsActivity"/>
        <activity android:name=".LocationTermsActivity"/>
        <activity android:name=".RegisterTermsActivity" />
        <activity android:name=".RegisterInputNameActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".RegisterInputBirthGenderActivity"/>
        <activity android:name=".RegisterInputEmailActivity"/>
        <activity android:name=".RegisterInputPasswordActivity"/>
        <activity android:name=".RegisterInputNotificationActivity"/>
        <activity android:name=".RegisterInputCompleteActivity"/>

        <!-- 메인(홈) 화면 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 설문조사 액티비티 -->
        <activity android:name=".SurveyStep1Activity" />
        <activity android:name=".SurveyStep2Activity" />
        <activity android:name=".SurveyStep3Activity" />
        <activity android:name=".SurveyStep4Activity" />
        <activity android:name=".SurveyStep5Activity" />
        <activity android:name=".SurveyStep6Activity" />
        <activity android:name=".SurveyStep7Activity" />
        <activity android:name=".SurveyFinalActivity" />
        <activity android:name=".StressLoadingActivity" />

        <!-- 캘린더 연동 관련 액티비티 -->
        <activity android:name=".CalendarConnectActivity" />
        <activity android:name=".CalendarSyncingActivity" />
        <activity android:name=".CalendarConnectSuccessActivity" />
        <activity android:name=".CalendarCompleteActivity" />

    </application>
</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nogorok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nogorok">

        <!-- 1. 앱 실행 시 제일 먼저 뜨는 SplashActivity(런처) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Nogorok.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2. 온보딩(1~3) 액티비티 (프래그먼트 or ViewPager로 관리) -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.Nogorok" />

        <!-- 3. 회원가입/로그인 선택 화면 -->
        <activity
            android:name=".SignupLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Nogorok" />

        <!-- 4. 로그인 화면 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Nogorok" />

        <!-- 5. 비밀번호 찾기 관련 액티비티 -->
        <activity android:name=".FindPasswordEmailActivity" android:exported="false" />
        <activity android:name=".FindPasswordResetActivity" android:exported="false" />

        <!-- 6. 회원가입 화면 -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Nogorok" />

        <!-- 7. 메인(홈) 화면 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.Nogorok" />

    </application>
</manifest>

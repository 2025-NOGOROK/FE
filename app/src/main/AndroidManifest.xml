<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nogorok">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NOGOROK">

        <!-- 1. 스플래시(로고) 화면: 앱 최초 실행 시 가장 먼저 뜨는 화면 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Nogorok.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 2. 온보딩 화면(프래그먼트로 1,2,3 관리) -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 3. 회원가입/로그인 선택 화면 -->
        <activity
            android:name=".SignupLoginActivity"
            android:exported="false"
            android:label="@string/title_activity_signup_login"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 4. 회원가입 화면 -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 5. 로그인 화면 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

        <!-- 6. 메인 화면(필요하다면) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NOGOROK" />

    </application>
</manifest>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- 1. 나의 일정 -->
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.nogorok.features.schedule.ScheduleFragment"
        android:label="나의 일정"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/action_scheduleFragment_to_scheduleAddFragment"
            app:destination="@id/scheduleAddFragment" />
    </fragment>

    <!-- 2. 일정 추가 (두 번째 이미지) -->
    <fragment
        android:id="@+id/scheduleAddFragment"
        android:name="com.example.nogorok.features.schedule.ScheduleAddFragment"
        android:label="ScheduleAddFragment" />

    <!-- 3. 홈 -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.nogorok.features.home.HomeFragment"
        android:label="홈"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_webDetailFragment"
            app:destination="@id/webDetailFragment" />

        <!-- ✅ 행사 상세 페이지로 이동하는 액션 추가 -->
        <action
            android:id="@+id/action_homeFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>

    <!-- 웹 상세 -->
    <fragment
        android:id="@+id/webDetailFragment"
        android:name="com.example.nogorok.features.web.WebDetailFragment"
        android:label="상세 페이지"
        tools:layout="@layout/fragment_web_detail" />

    <!-- 4. 마이페이지 -->
    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.example.nogorok.features.mypage.MypageFragment"
        android:label="마이페이지"
        tools:layout="@layout/fragment_mypage" />

    <!-- 5. 행사 정보 -->
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.nogorok.features.event.EventDetailFragment"
        android:label="행사 정보"
        tools:layout="@layout/fragment_event_detail" />

    <!-- 6. 긴급 스트레스 모드로 이동 -->
    <fragment
        android:id="@+id/chronicStressModeFragment"
        android:name="com.example.nogorok.features.stress.ChronicStressModeFragment"
        android:label="Chronic Stress Mode">

        <!-- 커스텀 스킴 딥링크 -->
        <deepLink
            app:uri="nogorok://stress/chronic" />

        <!-- HTTPS 앱링크(선택) -->
        <deepLink
            app:uri="https://nogorok.app/stress/chronic" />
    </fragment>

</navigation>

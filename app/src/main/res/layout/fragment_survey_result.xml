<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 헤더: 백버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="뒤로가기"
            android:src="@drawable/ic_arrow_back"
            app:tint="#3F4946"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 본문 스크롤 -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 상태 이미지 -->
            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="179dp"
                android:layout_height="179dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="160dp"
                android:contentDescription="상태 이미지"
                android:scaleType="fitCenter" />

            <!-- 타이틀 -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="스트레스 상태 타이틀"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/pretendard_bold" />

            <!-- 서브 타이틀 -->
            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="스트레스 상태 내용"
                android:textColor="#73605A"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_regular" />
        </LinearLayout>
    </ScrollView>

    <!-- 하단 고정 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrimary"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="72dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="홈으로 돌아가기"
        android:textAllCaps="false"
        android:textColor="#F4EED4"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendard_bold"
        app:backgroundTint="#73605A"
        app:cornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#73605A">
    <!--  상단 백버튼  -->
    <ImageButton android:id="@+id/btnBack" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_arrow_back" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="뒤로가기" app:tint="#F4EED4" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp" android:layout_marginTop="4dp"/>
    <!--  heart1 아이콘: toolbar 아래, marginTop 줄임  -->
    <ImageView android:id="@+id/imgHeart" android:layout_width="120dp" android:layout_height="15dp" android:src="@drawable/heart5" android:contentDescription="하트" app:layout_constraintTop_toBottomOf="@+id/btnBack" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"/>
    <!--  질문 텍스트: heart1 바로 아래, marginTop 24dp  -->
    <TextView android:id="@+id/tvQuestion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="38dp" android:layout_marginTop="30dp" android:layout_marginEnd="38dp" android:gravity="center" android:text="스트레스를 받으면\n어떤 반응을 보이나요?" android:textColor="#F4EED4" android:textSize="24sp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/imgHeart"/>
    <!--  질문 텍스트 아래에 바로 5개 버튼 선언!  -->
    <com.google.android.material.button.MaterialButton android:id="@+id/btnStress1" style="@style/Widget.MaterialComponents.Button" android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="36dp" android:layout_marginEnd="36dp" android:layout_marginTop="50dp" android:background="@drawable/btn_survey_option_bg" android:text="무기력해지고 아무것도 하기 싫어져요" android:textColor="@color/btn_survey_option_text" android:textSize="18sp" app:cornerRadius="0dp" app:layout_constraintTop_toBottomOf="@id/tvQuestion" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btnStress2" style="@style/Widget.MaterialComponents.Button" android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="36dp" android:layout_marginEnd="36dp" android:layout_marginTop="16dp" android:background="@drawable/btn_survey_option_bg" android:text="쉽게 예민해지고 화가 나요" android:textColor="@color/btn_survey_option_text" android:textSize="18sp" app:cornerRadius="0dp" app:layout_constraintTop_toBottomOf="@id/btnStress1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btnStress3" style="@style/Widget.MaterialComponents.Button" android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="36dp" android:layout_marginEnd="36dp" android:layout_marginTop="16dp" android:background="@drawable/btn_survey_option_bg" android:text="과식을 하게 돼요" android:textColor="@color/btn_survey_option_text" android:textSize="18sp" app:cornerRadius="0dp" app:layout_constraintTop_toBottomOf="@id/btnStress2" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btnStress4" style="@style/Widget.MaterialComponents.Button" android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="36dp" android:layout_marginEnd="36dp" android:layout_marginTop="16dp" android:background="@drawable/btn_survey_option_bg" android:text="우울해지고 눈물이 나요" android:textColor="@color/btn_survey_option_text" android:textSize="18sp" app:cornerRadius="0dp" app:layout_constraintTop_toBottomOf="@id/btnStress3" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btnStress5" style="@style/Widget.MaterialComponents.Button" android:layout_width="0dp" android:layout_height="56dp" android:layout_marginStart="36dp" android:layout_marginEnd="36dp" android:layout_marginTop="16dp" android:background="@drawable/btn_survey_option_bg" android:text="혼자 있고 싶어져요" android:textColor="@color/btn_survey_option_text" android:textSize="18sp" app:cornerRadius="0dp" app:layout_constraintTop_toBottomOf="@id/btnStress4" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  다음 버튼: 하단 고정, 이전과 동일  -->
    <com.google.android.material.button.MaterialButton android:id="@+id/btnNext" android:layout_width="0dp" android:layout_height="60dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginBottom="72dp" android:enabled="false" android:text="다음" android:textStyle="bold" android:textColor="@color/btn_next_survey1_text_selector" android:textSize="18sp" app:backgroundTint="@color/btn_next_survey1_bg_selector" app:cornerRadius="16dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:strokeColor="#804D403C" app:strokeWidth="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
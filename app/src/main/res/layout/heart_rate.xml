<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.nogorok.model.HeartRateViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.HeartRateActivity">

        <!-- 제목 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_layout_width"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tabbar_person_on"
                android:contentDescription="@string/heart_rate_heading" />

            <TextView
                android:id="@+id/heart_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_start"
                android:text="@string/heart_rate_heading"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 심박수 리스트 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:baselineAligned="true"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/heart_rate_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/heart_rate_list_desc" />
        </LinearLayout>
    </LinearLayout>
</layout>

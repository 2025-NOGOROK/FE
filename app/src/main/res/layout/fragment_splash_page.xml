<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#73605A" android:padding="32dp">
    <!--  쉼표 이미지: 맨 위 중앙에 배치  -->
    <ImageView android:id="@+id/img_comma" android:layout_width="98dp" android:layout_height="32dp" android:src="@drawable/comma_one" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:contentDescription="쉼표 이미지1" android:layout_marginTop="32dp"/>
    <!--  메인 메시지 텍스트: 쉼표 이미지 아래 중앙  -->
    <TextView android:id="@+id/tv_main_message" android:layout_width="0dp" android:layout_height="wrap_content" android:text="하루하루 쌓이는 고단함을\n기록하고, 돌아보고, 회복하는 시간" android:textColor="#F4EED4" android:textSize="24sp" android:textAlignment="center" android:gravity="center" app:layout_constraintTop_toBottomOf="@id/img_comma" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp" android:lineSpacingExtra="4dp"/>
    <!--  서브 메시지 텍스트: 메인 메시지 아래 중앙  -->
    <TextView android:id="@+id/tv_sub_message" android:layout_width="0dp" android:layout_height="wrap_content" android:text="노력과 고됨의 기록이\n곧 나를 회복시키는 루틴이 됩니다." android:textColor="#F4EED4" android:textSize="16sp" android:textAlignment="center" android:gravity="center" app:layout_constraintTop_toBottomOf="@id/tv_main_message" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:lineSpacingExtra="2dp"/>
    <!--  일러스트 이미지: 서브 메시지 아래 중앙  -->
    <ImageView android:id="@+id/img_illust" android:layout_width="200dp" android:layout_height="200dp" android:src="@drawable/onboarding_1" app:layout_constraintTop_toBottomOf="@id/tv_sub_message" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp" android:contentDescription="사람과 고양이 일러스트"/>
    <!--  시작하기 버튼: 맨 아래 중앙, 둥근 모서리, 배경색, 테두리, 투명도 적용  -->
    <com.google.android.material.button.MaterialButton android:id="@+id/btn_next" android:layout_width="0dp" android:layout_height="56dp" android:text="시작하기" android:textSize="18sp" android:textColor="#8073605A" android:backgroundTint="#F4EED4" app:cornerRadius="16dp" app:strokeColor="#804D403C" app:strokeWidth="2dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4EED4">

    <!-- 상단 툴바 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="뒤로가기"
            android:layout_marginStart="4dp"/>
    </FrameLayout>

    <!-- 쉼표 이미지 -->
    <ImageView
        android:id="@+id/imgComma"
        android:layout_width="159dp"
        android:layout_height="32dp"
        android:src="@drawable/register_comma_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:contentDescription="진행 표시"/>

    <!-- 안내문구 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더 잘 맞는 루틴을 위해,\n당신의 생일과 성별을 참고할게요."
        android:textColor="#73605A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"/>

    <!-- 생년월일 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <EditText
            android:id="@+id/etYear"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:hint="YYYY"
            android:inputType="number"
            android:textColor="#73605A"
            android:textColorHint="#8073605A"
            android:gravity="center"
            android:background="@null"
            android:maxLength="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="#73605A"
            android:textSize="20sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etMonth"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:hint="MM"
            android:inputType="number"
            android:textColor="#73605A"
            android:textColorHint="#8073605A"
            android:gravity="center"
            android:background="@null"
            android:maxLength="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textColor="#73605A"
            android:textSize="20sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etDay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:hint="DD"
            android:inputType="number"
            android:textColor="#73605A"
            android:textColorHint="#8073605A"
            android:gravity="center"
            android:background="@null"
            android:maxLength="2"/>
    </LinearLayout>

    <!-- 성별 선택 -->
    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남"
            android:textColor="#73605A"
            android:buttonTint="#73605A"/>

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여"
            android:textColor="#73605A"
            android:buttonTint="#73605A"
            android:layout_marginStart="32dp"/>

        <RadioButton
            android:id="@+id/rbNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택 안 함"
            android:textColor="#73605A"
            android:buttonTint="#73605A"
            android:layout_marginStart="32dp"/>
    </RadioGroup>

    <!-- 다음 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#F4EED4"
        android:text="다음"
        android:textColor="#8073605A"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="#804D403C"
        android:enabled="false"/>
</LinearLayout>

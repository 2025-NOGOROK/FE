<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73605A"
    android:padding="32dp">

    <ImageView
        android:id="@+id/img_comma"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:src="@drawable/comma_one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="쉼표 이미지"
        android:layout_marginTop="72dp" />

    <TextView
        android:id="@+id/tv_main_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="하루하루 쌓이는 고단함을\n기록하고, 돌아보고, 회복하는 시간"
        android:textColor="#F4EED4"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/img_comma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tv_sub_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="노고록 꾸준히의 기록이\n곧 나를 회복시키는 루틴이 됩니다."
        android:textColor="#F4EED4"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_main_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/img_illust"
        android:layout_width="277dp"
        android:layout_height="277dp"
        android:src="@drawable/splash1_illust"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:contentDescription="사람과 고양이 일러스트" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="시작하기"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#8073605A"
        app:backgroundTint="#F4EED4"
        app:cornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="#804D403C"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

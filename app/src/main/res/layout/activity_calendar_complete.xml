<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EED4">

    <!-- 상단 툴바: 뒤로가기 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        app:tint="#73605A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"/>

    <!-- 세로 중앙 Guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>

    <!-- 완료 안내 텍스트 -->
    <TextView
        android:id="@+id/tvComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이제 모든 설정을 완료했어요!\n노고록과 함께 편안한 하루 되세요."
        android:textColor="#73605A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="160dp"/>

    <!-- 콤마 이미지 -->
    <ImageView
        android:id="@+id/imgComma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/complete_comma"
        android:contentDescription="콤마"
        app:layout_constraintTop_toBottomOf="@id/tvComplete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- 노고록 한글 이미지 (콤마와 간격 0, 하단이 Guideline에 맞게) -->
    <ImageView
        android:id="@+id/imgNogorok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nogorok_korean"
        android:contentDescription="노고록"
        app:layout_constraintTop_toBottomOf="@id/imgComma"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/centerGuide"
        android:layout_marginBottom="0dp"
        android:scaleType="fitEnd"/>

    <!-- 다음 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComplete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="완료하기"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#F4EED4"
        app:backgroundTint="#73605A"
        app:cornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="#4D403C"
        android:enabled="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

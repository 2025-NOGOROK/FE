<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 0️⃣ 상단 툴바 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#73605A"
            android:contentDescription="뒤로가기"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 페이지 제목 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행사 정보"
            android:textColor="#73605A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 1️⃣ 콘텐츠 영역: 툴바 아래에서 스크롤 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbarContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 2️⃣ 썸네일 + 장르/제목/기간 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="#73605A"
                app:strokeWidth="1.5dp"
                app:cardBackgroundColor="#FFFAE3">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/ivEventThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="행사 썸네일"/>

                    <!-- 장르 태그 -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEventGenre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="공연/전시"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="#FFFAE3"
                        app:chipCornerRadius="0dp"
                        app:chipBackgroundColor="#73605A"
                        app:closeIconEnabled="false"
                        app:chipIconEnabled="false"/>

                    <!-- 제목 -->
                    <TextView
                        android:id="@+id/tvEventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="미술로 다시 쓰는 삶의 이야기"
                        android:textColor="#73605A"
                        android:textSize="20sp"
                        android:fontFamily="@font/pretendard_bold"/>

                    <!-- 기간 -->
                    <TextView
                        android:id="@+id/tvEventPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="2025.06.01.~06.30."
                        android:textColor="#73605A"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3️⃣ 현 위치로부터 거리 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#73605A"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_location"
                        app:tint="#FFFAE3"/>

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="현 위치로부터 0km"
                        android:textColor="#FFFAE3"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_semibold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4️⃣ 행사 주소 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="#73605A"
                app:strokeWidth="1.5dp"
                app:cardBackgroundColor="#FFFAE3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_place"
                        app:tint="#73605A"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="서울 중구 덕수궁길 61"
                        android:textColor="#73605A"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_regular"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 5️⃣ 행사 설명 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="#73605A"
                app:strokeWidth="1.5dp"
                app:cardBackgroundColor="#FFFAE3">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="행사 설명"
                    android:textColor="#73605A"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_regular"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73605A"
    android:padding="32dp">

    <ImageView
        android:id="@+id/img_comma"
        android:layout_width="127dp"
        android:layout_height="32dp"
        android:src="@drawable/comma4_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="쉼표 이미지"
        android:layout_marginTop="72dp" />

    <TextView
        android:id="@+id/tv_main_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="긴 쉼표 일정 추천"
        android:textColor="#F4EED4"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/img_comma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tv_sub_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="긴 쉼표 일정의 시나리오를 맞춤 추천해드려요.\n내 주변에서 열리는 행사와 전시를 관람해보세요."
        android:textColor="#F4EED4"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_main_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/img_illust"
        android:layout_width="206dp"
        android:layout_height="425dp"
        android:src="@drawable/phone3"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:contentDescription="3번 사진" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="시작하기"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#8073605A"
        app:backgroundTint="#F4EED4"
        app:cornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="#804D403C"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

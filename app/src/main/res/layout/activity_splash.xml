<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 첫 화면: 로고만 보여주는 화면 -->
    <LinearLayout
        android:id="@+id/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4EED4"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="248dp"
            android:contentDescription="노고록 로고"
            android:src="@drawable/nogorok_logo_splash" />

    </LinearLayout>

    <!-- Splash1: 콤마 이미지, 메인/서브 텍스트, 일러스트, 버튼 -->
    <LinearLayout
        android:id="@+id/splash1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73605A"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <!-- 콤마 이미지 -->
        <ImageView
            android:layout_width="98dp"
            android:layout_height="32dp"
            android:src="@drawable/comma_one"
            android:contentDescription="쉼표 이미지"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 메인 메시지 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하루하루 쌓이는 고단함을\n기록하고, 돌아보고, 회복하는 시간"
            android:textAlignment="center"
            android:textColor="#F4EED4"
            android:textSize="22sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- 서브 메시지 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노력과 고됨의 기록이\n곧 나를 회복시키는 루틴이 됩니다."
            android:textAlignment="center"
            android:textColor="#F4EED4"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"/>

        <!-- 일러스트 이미지 -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/splash1_illust"
            android:contentDescription="사람과 고양이 일러스트"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- 시작하기 버튼: MaterialButton으로 변경 (색상/텍스트 기존 유지) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F4EED4"
            android:elevation="0dp"
            android:text="시작하기"
            android:textColor="#8073605A"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:strokeColor="#804D403C"
            app:strokeWidth="2dp"/>
    </LinearLayout>

    <!-- Splash2: 콤마 이미지(commatwo), 텍스트, 일러스트, 버튼 -->
    <LinearLayout
        android:id="@+id/splash2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73605A"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <!-- 콤마 이미지(commatwo) -->
        <ImageView
            android:layout_width="98dp"
            android:layout_height="32dp"
            android:src="@drawable/commatwo"
            android:contentDescription="쉼표 이미지2"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 메인 메시지 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 몸이 말해주는\n스트레스 신호를 기록해요"
            android:textAlignment="center"
            android:textColor="#F4EED4"
            android:textSize="22sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- 서브 메시지 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스마트워치와 연동하여 \n스트레스 지수를 분석할게요."
            android:textAlignment="center"
            android:textColor="#F4EED4"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"/>

        <!-- 일러스트 이미지(페이지2용) -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/splash2"
            android:contentDescription="고민하는 사람과 고양이 일러스트"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- 시작하기 버튼: MaterialButton으로 변경 (색상/텍스트 기존 유지) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F4EED4"
            android:elevation="0dp"
            android:text="시작하기"
            android:textColor="#8073605A"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:strokeColor="#804D403C"
            app:strokeWidth="2dp"/>
    </LinearLayout>

    <!-- Splash3: 콤마 이미지(commathree), 텍스트, 일러스트, 버튼 -->
    <LinearLayout
        android:id="@+id/splash3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73605A"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <!-- 콤마 이미지(commathree) -->
        <ImageView
            android:layout_width="98dp"
            android:layout_height="32dp"
            android:src="@drawable/commathree"
            android:contentDescription="쉼표 이미지3"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 메인 메시지 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스트레스 지수에 따른 맞춤 루틴,\n오늘도 나를 돌보는 연습을 시작해요."
            android:textAlignment="center"
            android:textColor="#F4EED4"
            android:textSize="22sp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"/>

        <!-- 서브 메시지 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하루하루의 감정과 고단함, \n이제 노고록이 함께 기억할게요."
            android:textAlignment="center"
            android:textColor="#F4EED4"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"/>

        <!-- 일러스트 이미지(페이지3용) -->
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/splash3"
            android:contentDescription="행복한 사람과 고양이 일러스트"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- 시작하기 버튼: MaterialButton으로 변경 (색상/텍스트 기존 유지) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F4EED4"
            android:elevation="0dp"
            android:text="시작하기"
            android:textColor="#73605A"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:strokeColor="#804D403C"
            app:strokeWidth="2dp"/>
    </LinearLayout>
</FrameLayout>

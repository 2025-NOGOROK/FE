<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="#FFFFFF">
    <!--  상단 툴바: 중앙 정렬 타이틀 + 뒤로가기 버튼  -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="56dp">
        <!--  뒤로가기 버튼  -->
        <ImageButton android:id="@+id/btnBack" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/ic_arrow_back" android:background="?attr/selectableItemBackgroundBorderless" android:layout_gravity="start|center_vertical" android:contentDescription="뒤로가기" android:layout_marginStart="4dp"/>
        <!--  중앙 타이틀  -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="로그인" android:textColor="#73605A" android:textSize="20sp" android:layout_gravity="center" android:textStyle="bold"/>
    </FrameLayout>
    <!-- 툴바 하단 선 -->
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#80666666"/>
    <!--  쉼표+노고록 로고 이미지: 왼쪽 정렬  -->
    <ImageView android:id="@+id/imgLogo" android:layout_width="120dp" android:layout_height="80dp" android:src="@drawable/comma_nogorok" android:layout_marginTop="32dp" android:layout_marginStart="9dp" android:contentDescription="노고록 로고"/>
    <!--  이메일 입력: 투명 배경 + 하단 선만 + 에러 메시지  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:orientation="vertical">
        <EditText android:id="@+id/edtEmail" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:hint="이메일 입력" android:textColor="#8073605A" android:textColorHint="#8073605A" android:inputType="textEmailAddress" android:background="@null" android:paddingBottom="8dp"/>
        <!--  하단 선  -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#8073605A"/>
        <!--  이메일 에러 메시지  -->
        <TextView android:id="@+id/emailError" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="이메일을 입력해주세요" android:textColor="#FFD32F2F" android:textSize="12sp" android:visibility="gone" android:paddingTop="4dp"/>
    </LinearLayout>
    <!--  비밀번호 입력: 투명 배경 + 하단 선만 + 에러 메시지  -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:orientation="vertical">
        <EditText android:id="@+id/edtPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="48dp" android:hint="비밀번호 입력" android:textColor="#8073605A" android:textColorHint="#8073605A" android:inputType="textPassword" android:background="@null" android:paddingBottom="8dp"/>
        <!--  하단 선  -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#8073605A"/>
        <!--  비밀번호 에러 메시지  -->
        <TextView android:id="@+id/passwordError" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="비밀번호를 입력해주세요" android:textColor="#FFD32F2F" android:textSize="12sp" android:visibility="gone" android:paddingTop="4dp"/>
    </LinearLayout>
    <!--  로그인 버튼  -->
    <com.google.android.material.button.MaterialButton android:id="@+id/btnLogin" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="32dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:backgroundTint="#73605A" android:text="로그인" android:textColor="#F4EED4" android:textSize="18sp" app:cornerRadius="16dp" app:strokeWidth="0dp"/>
    <!--  비밀번호 찾기 링크  -->
    <TextView android:id="@+id/tvForgotPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="비밀번호가 생각나지 않으시나요?" android:textColor="#8073605A" android:textSize="14sp" android:gravity="center" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFBE4">

    <!-- 상단 툴바 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="뒤로가기"
            android:layout_marginStart="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="비밀번호 찾기"
            android:textColor="#73605A"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"/>
    </FrameLayout>

    <!-- 이메일(고정) + 하단 선 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nogorok@gmail.com"
            android:textColor="#73605A"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <!-- 하단 선 추가 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8073605A"/>
    </LinearLayout>

    <!-- 새 비밀번호 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="새 비밀번호 입력"
                android:textColor="#8073605A"
                android:textColorHint="#8073605A"
                android:inputType="textPassword"
                android:background="@null"
                android:paddingBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/btnToggleNewPassword"/>
            <ImageButton
                android:id="@+id/btnToggleNewPassword"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_eye_off"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:contentDescription="비밀번호 보기/숨기기"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8073605A"/>
    </LinearLayout>

    <!-- 비밀번호 재입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="비밀번호 재입력"
                android:textColor="#8073605A"
                android:textColorHint="#8073605A"
                android:inputType="textPassword"
                android:background="@null"
                android:paddingBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/btnToggleConfirmPassword"/>
            <ImageButton
                android:id="@+id/btnToggleConfirmPassword"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_eye_off"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:contentDescription="비밀번호 보기/숨기기"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8073605A"/>
        <!-- 에러/성공 메시지 -->
        <TextView
            android:id="@+id/passwordMatchMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호가 일치하지 않습니다."
            android:textColor="#FFD32F2F"
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="4dp"/>
    </LinearLayout>

    <!-- 확인 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#73605A"
        android:text="확인"
        android:textColor="#F4EED4"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:strokeWidth="0dp"
        android:enabled="false"/>

</LinearLayout>

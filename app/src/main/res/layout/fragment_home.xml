<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- 최근 스트레스 지수 카드 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_top_rounded_20"
            android:clipToPadding="false"
            android:importantForAccessibility="no"
            android:layout_margin="0dp"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/stress_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="당신의 최근 스트레스 지수는\n❤️ 93"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_smile"
                android:contentDescription="@string/smile"/>
        </LinearLayout>

        <!-- 스트레스 관리 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스트레스 관리"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textColor="#73605A"
            android:fontFamily="@font/pretendard_semibold"/>

        <!-- 스트레스 관리 목록 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp">

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_item_background"
                    android:src="@drawable/sample_cortisol"
                    android:contentDescription="@string/sample"/>

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_item_background"
                    android:src="@drawable/sample_cortisol"
                    android:contentDescription="@string/sample"/>

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_item_background"
                    android:src="@drawable/sample_cortisol"
                    android:contentDescription="@string/sample"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 내 주변 전시/행사 정보 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 주변 전시/행사 정보"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textColor="#73605A"
            android:fontFamily="@font/pretendard_semibold"/>

        <!-- 행사 정보 목록 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp">

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_item_background"
                    android:src="@drawable/sample_meditation"
                    android:contentDescription="@string/sample"/>

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_item_background"
                    android:src="@drawable/sample_meditation"
                    android:contentDescription="@string/sample"/>

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_item_background"
                    android:src="@drawable/sample_meditation"
                    android:contentDescription="@string/sample"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#F4EED4" android:gravity="center" android:orientation="vertical" android:padding="0dp">
    <!--  상단 여백  -->
    <Space android:layout_width="match_parent" android:layout_height="80dp"/>
    <!--  노고록 로고 이미지  -->
    <ImageView android:id="@+id/imgLogo" android:layout_width="248dp" android:layout_height="248dp" android:layout_gravity="center" android:contentDescription="노고록 로고" android:src="@drawable/nogorok_logo_splash"/>
    <!--  중간 여백  -->
    <Space android:layout_width="match_parent" android:layout_height="48dp"/>
    <!--  회원가입 버튼: 진한 브라운 배경, 흰색 글씨, 둥근 모서리, 투명 테두리  -->
    <com.google.android.material.button.MaterialButton android:id="@+id/btnSignup" android:layout_width="match_parent" android:layout_height="56dp" android:layout_gravity="center" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginBottom="16dp" android:backgroundTint="#73605A" android:elevation="2dp" android:text="회원가입" android:textColor="#FFFFFF" android:textSize="18sp" app:cornerRadius="16dp" app:strokeColor="#804D403C" app:strokeWidth="2dp"/>
    <!--  로그인 버튼: 흰 배경, 진한 브라운 테두리, 진한 브라운 글씨, 둥근 모서리, 투명 테두리  -->
    <com.google.android.material.button.MaterialButton android:id="@+id/btnLogin" android:layout_width="match_parent" android:layout_height="56dp" android:layout_gravity="center" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:backgroundTint="#F4EED4" android:elevation="0dp" android:text="로그인" android:textColor="#8B7C6E" android:textSize="18sp" app:cornerRadius="16dp" app:strokeColor="#804D403C" app:strokeWidth="2dp"/>
</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EED4"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 상단 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <!-- 노고록 로고 이미지 -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="248dp"
        android:layout_height="248dp"
        android:layout_gravity="center"
        android:contentDescription="노고록 로고"
        android:src="@drawable/nogorok_logo_splash" />

    <!-- 중간 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <!-- 회원가입 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#73605A"
        android:elevation="2dp"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:strokeColor="#804D403C"
        app:strokeWidth="2dp" />

    <!-- 로그인 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#F4EED4"
        android:elevation="0dp"
        android:text="로그인"
        android:textColor="#8B7C6E"
        android:textSize="18sp"
        app:cornerRadius="16dp"
        app:strokeColor="#804D403C"
        app:strokeWidth="2dp" />

    <!-- ✅ 로그인 Fragment를 띄울 공간 (초기에는 GONE) -->
    <FrameLayout
        android:id="@+id/signupLoginContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="#F4EED4" />
</LinearLayout>

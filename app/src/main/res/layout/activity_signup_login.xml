<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFBE4"
    android:gravity="center"
    android:padding="0dp">

    <!-- 상단 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <!-- 노고록 로고 이미지 -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/nogorok_logo_splash"
        android:contentDescription="노고록 로고"
        android:layout_gravity="center" />

    <!-- 앱 이름 -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노고록"
        android:textSize="32sp"
        android:textColor="#7E6F5A"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <!-- 중간 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <!-- 회원가입 버튼: 배경은 진한 브라운, 글씨는 흰색, 둥근 모서리 -->
    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="회원가입"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_signup_bg"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:elevation="2dp" />

    <!-- 로그인 버튼: 흰 배경, 진한 브라운 테두리, 글씨는 진한 브라운, 둥근 모서리 -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="로그인"
        android:textSize="18sp"
        android:textColor="#8B7C6E"
        android:background="@drawable/btn_login_bg"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_gravity="center"
        android:elevation="0dp" />

</LinearLayout>

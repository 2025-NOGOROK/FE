<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 상단 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        app:tint="#3F4946"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp" />

    <!-- 스트레스 모드 아이콘 -->
    <ImageView
        android:id="@+id/ivStressAlarm"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/stress_alarm"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFFFFF"/>

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvStressTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="스트레스 관리에 어려움을\n겪고 계신가요?"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/pretendard_bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/ivStressAlarm"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 설명 -->
    <TextView
        android:id="@+id/tvStressDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="스트레스 지수가 지속적으로 회복되지 않고 있어요.\n만성 스트레스 모드를 활성화할게요."
        android:textSize="16sp"
        android:textColor="#73605A"
        android:fontFamily="@font/pretendard_regular"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvStressTitle"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnComplete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="68dp"
        android:enabled="true"
        android:text="활성화"
        android:textColor="#F4EED4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#73605A"
        app:cornerRadius="16dp"
        app:strokeColor="#4D403C"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

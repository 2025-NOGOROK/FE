<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 툴바 -->
    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="뒤로가기"
            android:layout_marginStart="4dp"/>

    </FrameLayout>

    <!-- 쉼표(,) 로고 -->
    <ImageView
        android:id="@+id/imgComma"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:src="@drawable/comma"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="5dp"/>

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="노고록과 함께\n하루를 쌓아가볼까요?"
        android:textColor="#222222"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="start"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/imgComma"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="24dp"/>

    <!-- 약관/다음버튼 하단 고정 -->
    <LinearLayout
        android:id="@+id/termsSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp">

        <!-- 약관 전체동의 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <CheckBox
                android:id="@+id/chkAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_circle_checkbox"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="약관 전체동의"
                android:textSize="16sp"
                android:textColor="#222222"
                android:paddingStart="8dp"/>
        </LinearLayout>
        <!-- 하단 선(전체동의 바로 아래) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8073605A"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <!-- 약관 리스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <!-- 서비스 이용 약관(필수) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/chkService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_circle_checkbox"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="서비스 이용 약관(필수)"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:paddingStart="8dp"/>
                <ImageButton
                    android:id="@+id/btnServiceDetail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:contentDescription="상세보기"/>
            </LinearLayout>

            <!-- 개인정보 수집 및 이용(필수) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/chkPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_circle_checkbox"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="개인정보 수집 및 이용(필수)"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:paddingStart="8dp"/>
                <ImageButton
                    android:id="@+id/btnPrivacyDetail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:contentDescription="상세보기"/>
            </LinearLayout>

            <!-- 건강정보 수집 및 이용(필수) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/chkHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_circle_checkbox"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="건강정보 수집 및 이용(필수)"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:paddingStart="8dp"/>
                <ImageButton
                    android:id="@+id/btnHealthDetail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:contentDescription="상세보기"/>
            </LinearLayout>

            <!-- 위치기반 서비스 이용(필수) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <CheckBox
                    android:id="@+id/chkLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_circle_checkbox"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="위치기반 서비스 이용(필수)"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:paddingStart="8dp"/>
                <ImageButton
                    android:id="@+id/btnLocationDetail"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@android:color/transparent"
                    android:contentDescription="상세보기"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 다음 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:text="다음"
            android:textColor="#F4EED4"
            android:textSize="18sp"
            app:cornerRadius="16dp"
            app:strokeWidth="0dp"
            android:enabled="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

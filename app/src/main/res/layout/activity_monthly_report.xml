<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <!-- ScrollView는 자식 1개만 -->
    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_header_rounded"
            android:padding="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="월간 리포트"
                android:textColor="@color/ivory"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/pretendard_semibold" />
        </LinearLayout>

        <!-- 본문 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 날짜 -->
            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5월"
                android:textSize="16sp"
                android:textColor="@color/brown"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_marginBottom="24dp" />

            <!-- 이달의 쉼표 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이달의 쉼표"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                android:background="@drawable/bg_text_highlight"
                android:paddingBottom="2dp"
                android:layout_marginBottom="8dp" />

            <!-- 요약 카드들(동적) -->
            <LinearLayout
                android:id="@+id/mockSummaryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <!-- 섹션 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스트레스와 쉼표 리포트"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                android:background="@drawable/bg_text_highlight"
                android:paddingBottom="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- 리포트 카드들 -->
            <LinearLayout
                android:id="@+id/reportCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <!-- 카드 #1: 살색 (F4EED4 30%) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_report_card"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/comma"
                        android:alpha="0.7"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvMostStressDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="스트레스가 가장 많았던 날 5월 4일에\n쉼표 일정을 1개 수행했어요."
                        android:textColor="@color/brown"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/pretendard_semibold" />

                    <!-- ✅ 동적 칩 컨테이너 (여기에 여러 칩을 추가) -->
                    <LinearLayout
                        android:id="@+id/mostPillList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

                <!-- 카드 #2: 민트 (B0CFB2 50% + 테두리 #73605A) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_report_card"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/comma"
                        android:alpha="0.7"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvLeastStressDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="스트레스가 가장 적었던 날 5월 7일에\n쉼표 일정을 2개 수행했어요."
                        android:textColor="@color/brown"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/pretendard_semibold" />

                    <!-- ✅ 동적 칩 컨테이너 (여기에 여러 칩을 추가) -->
                    <LinearLayout
                        android:id="@+id/leastPillList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </LinearLayout>

            <!-- 차트 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 나의 스트레스 지수"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                android:background="@drawable/bg_text_highlight"
                android:paddingBottom="2dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="360dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="12dp">

                <com.example.nogorok.features.report.StressLineChartView
                    android:id="@+id/stressChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:paddingTop="44dp"
                    android:paddingBottom="22dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

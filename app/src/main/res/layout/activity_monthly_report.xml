<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <!-- ✅ ScrollView는 직계 자식 1개만 -->
    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_header_rounded"
            android:padding="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="월간 리포트"
                android:textColor="@color/ivory"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/pretendard_semibold" />
        </LinearLayout>

        <!-- 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 날짜 -->
            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5월"
                android:textSize="16sp"
                android:textColor="@color/brown"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_marginBottom="24dp" />

            <!-- 이달의 쉼표 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이달의 쉼표"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                android:background="@drawable/bg_text_highlight"
                android:paddingBottom="2dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/mockSummaryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <!-- 섹션 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스트레스와 쉼표 리포트"
                android:textSize="18sp"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/black"
                android:background="@drawable/bg_text_highlight"
                android:paddingBottom="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- 리포트 카드들 -->
            <LinearLayout
                android:id="@+id/reportCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <!-- 카드 #1: 비지(살색) 카드 — F4EED4 30% -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_report_card"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <!-- 쉼표 아이콘 -->
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/comma"
                        android:alpha="0.7"
                        android:layout_marginBottom="8dp" />

                    <!-- 설명 -->
                    <TextView
                        android:id="@+id/tvMostStressDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="스트레스가 가장 많았던 날 5월 4일에\n쉼표 일정을 1개 수행했어요."
                        android:textColor="@color/brown"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/pretendard_semibold" />

                    <!-- 태그/시간 알약 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tagMost1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_brown_filled"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="독서하기"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_semibold" />

                        <TextView
                            android:id="@+id/timeMost1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_brown_filled"
                            android:paddingStart="14dp"
                            android:paddingEnd="14dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="20:00-20:30"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 카드 #2: 민트 카드 — B0CFB2 50% + 외곽선 73605A -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_report_card"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:src="@drawable/comma"
                        android:alpha="0.7"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvLeastStressDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="스트레스가 가장 적었던 날 5월 7일에\n쉼표 일정을 2개 수행했어요."
                        android:textColor="@color/brown"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/pretendard_semibold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 첫 줄 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tagLeast1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_pill_brown_filled"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="독서하기"
                                android:textColor="@android:color/white"
                                android:textSize="13sp"
                                android:fontFamily="@font/pretendard_semibold" />
                        </LinearLayout>

                        <!-- 둘째 줄: 민트 아웃라인 알약 2개 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tagLeast2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_pill_outline_mint"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="경복궁 야간개장"
                                android:textColor="#5B463E"
                                android:textSize="13sp"
                                android:fontFamily="@font/pretendard_semibold" />

                            <TextView
                                android:id="@+id/timeLeast2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_pill_outline_mint"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="21:00-22:30"
                                android:textColor="#5B463E"
                                android:textSize="13sp"
                                android:fontFamily="@font/pretendard_semibold"
                                android:layout_marginStart="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- (선택) 차트 카드 자리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bg_card_elevated"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="28dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

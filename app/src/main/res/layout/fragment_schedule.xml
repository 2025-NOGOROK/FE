<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 캘린더 헤더 부분 (생략하지 않고 전체) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_calendar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDF6DC"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_calendar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_calendar_month"
            android:contentDescription="캘린더"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout_days"
            android:layout_marginStart="24dp"
            android:layout_marginTop="0dp"/>

        <ImageButton
            android:id="@+id/btn_prev_week"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_full_arrow_left"
            android:contentDescription="이전 주"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_year_month"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_year_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 5월"
            android:textColor="#73605A"
            android:textSize="18sp"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintStart_toEndOf="@+id/btn_prev_week"
            app:layout_constraintEnd_toStartOf="@+id/btn_next_week"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btn_next_week"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_full_arrow_right"
            android:contentDescription="다음 주"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_year_month"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:id="@+id/layout_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_year_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="36dp"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:id="@+id/layout_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/layout_days"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 일정 리스트: 위에 위치 -->
    <LinearLayout
        android:id="@+id/layoutScheduleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- + 일정 추가하기 버튼: 아래에 고정 -->
    <Button
        android:id="@+id/btn_add_schedule"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="+ 일정 추가하기"
        android:textSize="16sp"
        android:textColor="#73605A"
        android:background="@drawable/bg_add_schedule_btn"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
